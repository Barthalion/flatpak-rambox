{
  "app-id": "pro.rambox.Rambox",
  "base": "io.atom.electron.BaseApp",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "rambox",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=pulseaudio",
    "--share=network",
    "--device=dri",
    "--talk-name=org.freedesktop.Notifications",
    "--extra-data=rambox.tar.gz:2973863dd2653887fc9b9da7bbafd22b019c52c64435639bba3792481be63a6e:58986128::https://github.com/saenzramiro/rambox/releases/download/0.5.11/Rambox-0.5.11.tar.gz"
  ],
  "modules": [
    {
      "name": "rambox",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 apply_extra /app/bin/apply_extra",
        "install -Dm755 rambox /app/bin/rambox",
        "install -Dm644 rambox.png /app/share/icons/hicolor/256x256/apps/pro.rambox.Rambox.png",
        "install -Dm644 rambox.desktop /app/share/applications/pro.rambox.Rambox.desktop"
      ],
      "sources": [
        {
          "type": "script",
          "dest-filename": "apply_extra",
          "commands": [
            "tar xf rambox.tar.gz",
            "rm -f rambox.tar.gz",
            "mv Rambox-0.5.11 rambox"
          ]
        },
        {
          "type": "script",
          "dest-filename": "rambox",
          "commands": [
            "exec env TMPDIR=$XDG_CACHE_HOME /app/extra/rambox/rambox $@"
          ]
        },
        {
          "type": "file",
          "path": "rambox.desktop"
        },
        {
          "type": "file",
          "path": "rambox.png"
        }
      ]
    }
  ]
}
